{
    "name": "TwitVx Extension",
    "description": "Add's TwitVx related copy options to Twitter's video context menu",
    "version": "1.3",
    "manifest_version": 2,
    "permissions": [
        "clipboardWrite"
    ],
    "homepage_url": "https://github.com/viperr-san/TwitVx-Extension",
    "developer": {
        "url": "https://github.com/viperr-san/TwitVx-Extension"
    },
    "content_scripts": [
        {
            "matches": [
                "*://twitter.com/*",
                "*://mobile.twitter.com/*"
            ],
            "js": [
                "main.js"
            ]
        }
    ]
}
